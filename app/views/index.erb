<% unless current_user %>
<form action='/signup' method='get'>
  <input type="submit" value="Sign up!" class="button1">
</form>
<form action='/login' method='get'>
  <input type="submit" value="Log in" class="button1">
</form>
<br>
<br>
<% end %>
<% if current_user %>
  <form action='/peeps' method='post'>
    <textarea name="peep" id="peep" >
    </textarea>
    <input type="submit" value="Peep!" class="button">
  </form>
<% end %>

<br>
<br>

<% if @peeps %>
<div class='peep'>

  <% @peeps.each do |peep| %>

    <p><%= peep.user.username %></p> <div>peeped on <%= peep.created_at.strftime(" %d/%m/%y at %I:%M%p") %></div>
    <h5><%= peep.message %></h5>


    <% peep.reply.each do |reply| %>
       <p><%= reply.user.username %></p> <div>replied on <%= reply.created_at.strftime(" %d/%m/%y at %I:%M%p")%> </div>
      <h6><%= reply.message%></h6>
    <%end%>

  <% if current_user %>
    <form action='/reply/<%= peep.id %>/new' method='get'>
      <input type='submit' value='Reply' name='reply' class="button">
    </form>
    <%end%>
  </div>
  <%end%>
<%end%>
